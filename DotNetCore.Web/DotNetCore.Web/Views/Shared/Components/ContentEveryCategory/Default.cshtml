@using DotNetCore.Web
@using DotNetCore.Web.Models
@using DotNetCore.Utility.ExtensionMethod
@model List<CategoryViewModel>



@if (Model != null && Model.Count > 0)
{
    foreach (var category in Model)
    {
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h2 class="title">@category.Title</h2>
                </div>
            </div>
            @if (category.ListLastestPosts != null && category.ListLastestPosts.Count > 0)
            {
                foreach (var content in category.ListLastestPosts)
                {
                    <!-- post -->
                    <div class="col-md-4">
                        <div class="post post-sm">
                            <a class="post-img" href="@content.Url"><img src="@content.BannerUrl" alt=""></a>
                            <div class="post-body">
                                @if (content.ListCategoryOfContent != null && content.ListCategoryOfContent.Count > 0)
                                {
                                    <div class="post-category">
                                        @foreach (var sameCategory in content.ListCategoryOfContent)
                                        {
                                            <a href="@sameCategory.Url">@sameCategory.Title</a>
                                        }
                                    </div>
                                }
                                <h3 class="post-title title-sm"><a href="@content.Url">@content.Title.Truncate(45)</a></h3>
                                <ul class="post-meta">
                                    @if (content.Author != null)
                                    {
                                        <li><a href="@content.Author.Url">@content.Author.Name</a></li>
                                    }
                                    <li>@content.DatePublish</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <!-- /post -->
                }
            }
        </div>
    }
}


