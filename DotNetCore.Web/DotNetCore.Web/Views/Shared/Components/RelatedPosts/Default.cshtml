@using DotNetCore.Utility.ExtensionMethod;
@using DotNetCore.Web
@using DotNetCore.Web.Models
@model List<ContentViewModel>



@if (Model != null && Model.Count > 0)
{
    <div>
        <div class="section-title">
            <h3 class="title">Related Posts</h3>
        </div>
        <div class="row">
            <!-- post -->
            @foreach (var post in Model)
            {
                <div class="col-md-4">
                    <div class="post post-sm">
                        <a class="post-img" href="@post.Url"><img src="@post.BannerUrl" alt=""></a>
                        <div class="post-body">
                            <div class="post-category">
                                @foreach (var category in post.ListCategoryOfContent)
                                {
                                    <a href="@category.Url">@category.Title</a>
                                }
                            </div>
                            <h3 class="post-title title-sm"><a href="@post.Url">@post.Title.Truncate(40)</a></h3>
                            <ul class="post-meta">
                                @if (post.Author != null)
                                {
                                    <li><a href="@post.Author.Url">@post.Author.Name</a></li>
                                }
                                <li>@post.DatePublish</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}


