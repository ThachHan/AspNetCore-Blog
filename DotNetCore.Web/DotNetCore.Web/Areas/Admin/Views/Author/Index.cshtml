@using DotNetCore.Web.Areas.Admin.Models
@model List<DotNetCore.Web.Areas.Admin.Models.AuthorViewModel>
@{
    ViewBag.Title = "Author";
}

<div class="col-xs-12 page-title">
    <div class="title_left">
        <h3>Advertisement</h3>
    </div>
    <div class="title_right">
        <div class="pull-right">
            @Html.ActionLink("New Author", "Create", "Author")
        </div>
    </div>
</div>

<div class="col-xs-12 main-content">
    @if (!String.IsNullOrEmpty(ViewBag.MessageAlert))
    {
        <div class="alert alert-success fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span>@ViewBag.MessageAlert</span>
        </div>
    }

    <table class="table table-striped table-dark table-hover">
        <thead class="thead-inverse">
            <tr>
                <th scope="row" class="width-1">
                    Id
                </th>
                <th scope="row" class="width-3">
                    First Name
                </th>
                <th scope="row" class="width-3">
                    Last Name
                </th>
                <th scope="row" class="width-5">
                    Summary
                </th>
                <th scope="row" class="width-5">
                    Image
                </th>              
                <th scope="row" class="width-3">Action</th>
            </tr>
        </thead>
        @if (Model != null && Model.Count > 0)
        {
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.AuthorId
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Summary)
                    </td>
                    <td>
                        <img src="@item.ImageUrl" style="width:100px" />
                    </td>                    
                    <td>
                        <a href="@Url.Action("EditAsync", new { id = item.AuthorId })" class="btn btn-default">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        }
    </table>
</div>
