
@model DotNetCore.Web.Areas.Admin.Models.AuthorViewModel

@{
    ViewBag.Title = "Author";
}

<div class="page-title">
    <div class="title_left">
        <h3>
            Author
            <small>Update</small>
        </h3>
    </div>
</div>

<div class="main-content">
    <form asp-controller="Author" asp-action="EditAsync" method="post" id="form-author-create" enctype="multipart/form-data">

        @Html.AntiForgeryToken()
        <input asp-for="@Model.AuthorId" type="hidden" />
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="@Model.FirstName" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.FirstName" id="FirstName" class="form-control">
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.LastName" id="LastName" class="form-control" >
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImageUrl" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <div class="input-group image-preview">
                        <input asp-for="@Model.ImageUrl" type="text" class="form-control image-preview-filename" readonly> <!-- don't give a name === doesn't send on POST/GET -->
                        <span class="input-group-btn">
                            <!-- image-preview-clear button -->
                            <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                                 Clear
                            </button>
                            <!-- image-preview-input -->
                            <div class="btn btn-default image-preview-input">
                               
                                <span class="image-preview-input-title">Browse</span>
                                <input type="file" accept="image/png, image/jpeg, image/gif" name="fileUpload" /> <!-- rename it -->
                            </div>
                        </span>
                    </div><!-- /input-group image-preview [TO HERE]-->
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Summary" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Summary" id="Summary" class="form-control" >
                    <span asp-validation-for="@Model.Summary" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.FacebookLink" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.FacebookLink" id="FacebookLink" class="form-control" >
                    <span asp-validation-for="@Model.FacebookLink" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.TwitterLink" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.TwitterLink" id="TwitterLink" class="form-control" >
                    <span asp-validation-for="@Model.TwitterLink" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.GoogleLink" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.GoogleLink" id="GoogleLink" class="form-control" >
                    <span asp-validation-for="@Model.GoogleLink" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.InstagramLink" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.InstagramLink" id="InstagramLink" class="form-control" >
                    <span asp-validation-for="@Model.InstagramLink" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-sm-offset-3 col-md-10 col-sm-9 col-xs-12">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>
</div>
