
@model DotNetCore.Web.Areas.Admin.Models.PublishingContentViewModel

@{
    ViewBag.Title = "Publish";
}

<div class="page-title">
    <div class="title_left">
        <h3>
            Content
            <small>Publish</small>
        </h3>
    </div>
</div>

<div class="main-content">
    <form asp-controller="Content" asp-action="PublishAsync" method="post" id="form-content-create" enctype="multipart/form-data">

        @Html.AntiForgeryToken()
        <input asp-for="@Model.ContentId" type="hidden" />
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Title" id="Title" class="form-control"  readonly>
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Summary" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <textarea asp-for="@Model.Summary" id="rtxSummary" class="form-control"  readonly></textarea>
                    <span asp-validation-for="@Model.Summary" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group">
                <label asp-for="@Model.Categories" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <select asp-for="@Model.Categories"
                            class="form-control" id="dropdownCategory"
                            asp-items="@Model.ListCategory" multiple="multiple"></select>
                    <span asp-validation-for="@Model.Categories" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-sm-offset-3 col-md-10 col-sm-9 col-xs-12">
                    <input type="submit" value="Publish" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>
</div>
@section scriptsCkEditor{
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/lib/ckeditor/adapters/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script>
        $("#rtxSummary").ckeditor();
        $('#dropdownCategory').select2();
    </script>
}
