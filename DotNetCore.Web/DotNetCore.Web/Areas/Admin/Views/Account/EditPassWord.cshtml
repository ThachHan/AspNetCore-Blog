
@model DotNetCore.Web.Areas.Admin.Models.EditAccountViewModel

@{
    ViewBag.Title = "Account";
}

<div class="page-title">
    <div class="title_left">
        <h3>
            Account
            <small>Change Password</small>
        </h3>
    </div>
</div>

<div class="main-content">
    <form asp-controller="Account" asp-action="EditPasswordAsync" method="post" id="form-account-create" enctype="multipart/form-data">

        @Html.AntiForgeryToken()
        <input asp-for="@Model.AccountId" type="hidden" />
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="@Model.OldPassword" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.OldPassword" id="OldPassword" class="form-control">
                    <span asp-validation-for="@Model.OldPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NewPassword" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.NewPassword" id="NewPassword" class="form-control">
                    <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PasswordConfirm" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.PasswordConfirm" id="PasswordConfirm" class="form-control">
                    <span asp-validation-for="@Model.PasswordConfirm" class="text-danger"></span>
                </div>
            </div>           
            <div class="form-group">
                <div class="col-md-offset-2 col-sm-offset-3 col-md-10 col-sm-9 col-xs-12">
                    <input type="submit" value="Change" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>
</div>
