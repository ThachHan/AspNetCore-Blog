@using DotNetCore.Web.Areas.Admin.Models
@model List<DotNetCore.Web.Areas.Admin.Models.AccountDetailViewModel>
@{
    ViewBag.Title = "Account";
}

<div class="col-xs-12 page-title">
    <div class="title_left">
        <h3>Account</h3>
    </div>
    <div class="title_right">
        <div class="pull-right">
            @Html.ActionLink("New Account", "Create", "Account")
        </div>
    </div>
</div>

<div class="col-xs-12 main-content">
    <table class="table table-striped table-dark table-hover">
        <thead class="thead-inverse">
            <tr>
                <th scope="row" class="width-1">
                    Id
                </th>
                <th scope="row" class="width-3">
                    First Name
                </th>
                <th scope="row" class="width-3">
                    Last Name
                </th>
                <th scope="row" class="width-5">
                    UserName
                </th>
                <th scope="row" class="width-5">
                    Email
                </th>
                <th scope="row" class="width-5">
                    Roles
                </th>
                <th scope="row" class="width-3">
                    Action
                </th>
            </tr>
        </thead>
        @if (Model != null && Model.Count > 0)
        {
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.AccountId
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        <a href="@Url.Action("DetailAsync", new { id = item.AccountId })" class="btn btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> Detail
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        }
    </table>
</div>
