
@model DotNetCore.Web.Areas.Admin.Models.AccountDetailViewModel

@{
    ViewBag.Title = "Account";
}

<div class="page-title">
    <div class="title_left">
        <h3>
            Account
            <small>Details</small>
        </h3>
    </div>
</div>

<div class="main-content">
    <form asp-controller="" asp-action="" method="post" id="form-account-details" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="@Model.FirstName" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.FirstName" id="FirstName" class="form-control" readonly>
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.LastName" id="LastName" class="form-control" readonly>
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.UserName" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.UserName" id="UserName" class="form-control" readonly>
                    <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Email" id="Email" class="form-control" readonly/>
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Phone" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Phone" id="Phone" class="form-control" readonly>
                    <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.WorkPlace" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.WorkPlace" id="WorkPlace" class="form-control" readonly>
                    <span asp-validation-for="@Model.WorkPlace" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Address" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Address" id="Address" class="form-control" readonly>
                    <span asp-validation-for="@Model.Address" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Role" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Role" id="Role" class="form-control" readonly>
                    <span asp-validation-for="@Model.Role" class="text-danger"></span>
                </div>
            </div>      
        </div>

    </form>
</div>

@section scriptsCkEditor{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script>
        $('#dropdownRoles').select2();
    </script>
}
