
@using DotNetCore.Web.Areas.Admin.Models
@model List<DotNetCore.Web.Areas.Admin.Models.SystemParameterViewModel>

@{
    ViewBag.Title = "System Parameters";
}

<div class="col-xs-12 page-title">
    <div class="title_left">
        <h3>
            System Parameters
        </h3>
    </div>
    <div class="title_right">
        <div class="pull-right">
            @Html.ActionLink("New System Parameter", "Create","SystemParameter", new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<div class="col-xs-12 main-content">
    @if (!String.IsNullOrEmpty(ViewBag.MessageAlert))
    {
        <div class="alert alert-success fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span>@ViewBag.MessageAlert</span>
        </div>
    }

    <table class="table table-striped table-dark table-hover">
        <thead class="thead-inverse">
            <tr>
                <th scope="row" class="width-1">
                    Id
                </th>
                <th scope="row" class="width-5">
                    Paramenter Name
                </th>
                <th scope="row" class="width-8">
                    Parameter Value
                </th>
                <th scope="row" class="width-3">
                    Description
                </th>
                <th scope="row" class="width-3">Action</th>
            </tr>
        </thead>
        @if (Model != null && Model.Count > 0)
        {
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.Id
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SystemParameterName)
                    </td>
                    <td>
                        @Html.Raw(item.SystemParameterValue)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a href="@Url.Action("EditAsync", new { id = item.Id })" class="btn btn-default">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        }
    </table>
</div>
