@using DotNetCore.Web.Areas.Admin.Models
@model List<DotNetCore.Web.Areas.Admin.Models.AdvertisementViewModel>
@{
    ViewBag.Title = "Advertisement";
}

<div class="col-xs-12 page-title">
    <div class="title_left">
        <h3>Advertisement</h3>
    </div>
    <div class="title_right">
        <div class="pull-right">
            @Html.ActionLink("New Advertisement", "Create", "Advertisement")
        </div>
    </div>
</div>

<div class="col-xs-12 main-content">
    @if (!String.IsNullOrEmpty(ViewBag.MessageAlert))
    {
        <div class="alert alert-success fade in">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span>@ViewBag.MessageAlert</span>
        </div>
    }

    <table class="table table-striped table-dark table-hover">
        <thead class="thead-inverse">
            <tr>
                <th scope="row" class="width-1">
                    Id
                </th>
                <th scope="row" class="width-4">
                    Title
                </th>
                <th scope="row" class="width-4">
                    Picture
                </th>
                <th scope="row" class="width-3">
                    Link
                </th>
                <th scope="row" class="width-2">
                    Position
                </th>
                <th scope="row" class="width-2">
                    Is Active
                </th>
                <th scope="row" class="width-3">
                    Date Expired
                </th>
                <th scope="row" class="width-3">Action</th>
            </tr>
        </thead>
        @if (Model != null && Model.Count > 0)
        {
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @item.AdId
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        <img src="@item.BannerUrl" style="width:100px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PositionAdvertisement)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateExpired)
                    </td>
                    <td>
                        <a href="@Url.Action("EditAsync", new { id = item.AdId })" class="btn btn-default">
                            <i class="fa fa-pencil" aria-hidden="true"></i> Edit
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        }
    </table>
</div>
