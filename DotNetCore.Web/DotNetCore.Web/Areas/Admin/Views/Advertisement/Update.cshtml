
@model DotNetCore.Web.Areas.Admin.Models.AdvertisementViewModel

@{
    ViewBag.Title = "Advertisement";
}

<div class="page-title">
    <div class="title_left">
        <h3>
            Advertisement
            <small>Create</small>
        </h3>
    </div>
</div>

<div class="main-content">
    <form asp-controller="Advertisement" asp-action="EditAsync" method="post" id="form-advertisement-create" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input asp-for="@Model.AdId" type="hidden" />
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Title" id="Title" class="form-control" >
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Link" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Link" id="Link" class="form-control" >
                    <span asp-validation-for="@Model.Link" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BannerUrl" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <div class="input-group image-preview">
                        <input asp-for="@Model.BannerUrl" type="text" class="form-control image-preview-filename" readonly> <!-- don't give a name === doesn't send on POST/GET -->
                        <span class="input-group-btn">
                            <!-- image-preview-clear button -->
                            <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                                Clear
                            </button>
                            <!-- image-preview-input -->
                            <div class="btn btn-default image-preview-input">                               
                                <span class="image-preview-input-title">Browse</span>
                                <input type="file" accept="image/png, image/jpeg, image/gif" name="fileUpload" /> <!-- rename it -->
                            </div>
                        </span>
                    </div><!-- /input-group image-preview [TO HERE]-->
                    <span asp-validation-for="@Model.BannerUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PositionAdvertisement" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <select asp-for="@Model.PositionAdvertisement"
                            class="form-control"
                            asp-items="@Model.AdvertisementPostions"></select>
                    <span asp-validation-for="@Model.PositionAdvertisement" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IsActive" class="control-label col-md-2 col-sm-3 col-xs-12"></label>

                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input type="checkbox" asp-for="@Model.IsActive" data-toggle="toggle"  value="true">
                    <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-sm-offset-3 col-md-10 col-sm-9 col-xs-12">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>
</div>
