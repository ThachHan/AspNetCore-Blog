
@model DotNetCore.Web.Areas.Admin.Models.AdvertisementViewModel

@{
    ViewBag.Title = "Advertisement";
}

<div class="page-title">
    <div class="title_left">
        <h3>
            Advertisement
            <small>Details</small>
        </h3>
    </div>
</div>

<div class="main-content">
    <form asp-controller="Advertisement" asp-action="null" method="post" id="form-advertisement-create" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Title" id="Title" class="form-control"  readonly>
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Link" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Link" id="Link" class="form-control" readonly>
                    <span asp-validation-for="@Model.Link" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BannerUrl" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <img src="@Model.BannerUrl" />
                    <span asp-validation-for="@Model.BannerUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PositionAdvertisement" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.PositionAdvertisement" id="PositionAdvertisement" class="form-control"  readonly>
                    <span asp-validation-for="@Model.PositionAdvertisement" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IsActive" class="control-label col-md-2 col-sm-3 col-xs-12"></label>

                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input type="checkbox" asp-for="@Model.IsActive" data-toggle="toggle"  readonly value="true">
                    <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                </div>
            </div>
        </div>

    </form>
</div>
