
@model DotNetCore.Web.Areas.Admin.Models.CategoryViewModel

@{
    ViewBag.Title = "Category";
}

<div class="page-title">
    <div class="title_left">
        <h3>
            Category
            <small>Delete</small>
        </h3>
    </div>
</div>

<div class="main-content">
    <form asp-controller="Category" asp-action="Delete" method="post" id="form-category-Edit" enctype="multipart/form-data">

        @Html.AntiForgeryToken()
        <input asp-for="@Model.CategoryId" type="hidden" />
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Title" id="Title" class="form-control" name="Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Description" id="Description" class="form-control" name="Description">
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-sm-offset-3 col-md-10 col-sm-9 col-xs-12">
                    <input type="submit" value="Delete" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>
</div>
