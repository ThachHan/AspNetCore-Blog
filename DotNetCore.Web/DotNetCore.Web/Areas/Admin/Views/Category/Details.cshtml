@model DotNetCore.Web.Areas.Admin.Models.CategoryViewModel

@{
    ViewBag.Title = "Category";
}

<div class="page-title">
    <div class="title_left">
        <h3>
            Category
            <small>Details</small>
        </h3>
    </div>
</div>

<div class="main-content">
    <form asp-controller="Category" asp-action="null" method="post" id="form-category-create" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Title" id="Title" class="form-control"  readonly>
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Description" id="Description" class="form-control"  readonly>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BannerUrl" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <img src="@Model.BannerUrl" />
                    <span asp-validation-for="@Model.BannerUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IsActive" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input type="checkbox" asp-for="@Model.IsActive" data-toggle="toggle"  value="true" readonly>
                    <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IsShowTopMenu" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input type="checkbox" asp-for="@Model.IsShowTopMenu" data-toggle="toggle"  value="true" readonly>
                    <span asp-validation-for="@Model.IsShowTopMenu" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IsShowBotMenu" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input type="checkbox" asp-for="@Model.IsShowBotMenu" data-toggle="toggle"  value="true" readonly>
                    <span asp-validation-for="@Model.IsShowBotMenu" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CategoryParentId" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.CategoryParentName" id="Description" class="form-control"  readonly>

                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.CategoryLayout" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <input asp-for="@Model.CategoryLayoutName" id="Description" class="form-control"  readonly>
                <span asp-validation-for="@Model.CategoryLayout" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

