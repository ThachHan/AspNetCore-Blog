
@model DotNetCore.Web.Areas.Admin.Models.CategoryViewModel

@{
    ViewBag.Title = "Category";
}

<div class="page-title">
    <div class="title_left">
        <h3>
            Category
            <small>Create</small>
        </h3>
    </div>
</div>

<div class="main-content">
    <form asp-controller="Category" asp-action="CreateAsync" method="post" id="form-category-create" enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label asp-for="@Model.Title" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Title" id="Title" class="form-control" >
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input asp-for="@Model.Description" id="Description" class="form-control" >
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.BannerUrl" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <div class="input-group image-preview">
                        <input asp-for="@Model.BannerUrl" type="text" class="form-control image-preview-filename" readonly> <!-- don't give a name === doesn't send on POST/GET -->
                        <span class="input-group-btn">
                            <!-- image-preview-clear button -->
                            <button type="button" class="btn btn-default image-preview-clear" style="display:none;">
                                Clear
                            </button>
                            <!-- image-preview-input -->
                            <div class="btn btn-default image-preview-input">
                               
                                <span class="image-preview-input-title">Browse</span>
                                <input type="file" accept="image/png, image/jpeg, image/gif" name="fileUpload" /> <!-- rename it -->
                            </div>
                        </span>
                    </div><!-- /input-group image-preview [TO HERE]-->
                    <span asp-validation-for="@Model.BannerUrl" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IsActive" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input type="checkbox" asp-for="@Model.IsActive" data-toggle="toggle"  value="true">
                    <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IsShowTopMenu" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input type="checkbox" asp-for="@Model.IsShowTopMenu" data-toggle="toggle" value="true">
                    <span asp-validation-for="@Model.IsShowTopMenu" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.IsShowBotMenu" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <input type="checkbox" asp-for="@Model.IsShowBotMenu" data-toggle="toggle"  value="true">
                    <span asp-validation-for="@Model.IsShowBotMenu" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="@Model.CategoryParentId" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <select asp-for="@Model.CategoryParentId"
                            class="form-control"
                            asp-items="@Model.ListCategory">
                        <option disabled selected>--- SELECT ---</option>
                    </select>
                    <span asp-validation-for="@Model.CategoryParentId" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="@Model.CategoryLayout" class="control-label col-md-2 col-sm-3 col-xs-12"></label>
                <div class="col-md-10 col-sm-9 col-xs-12">
                    <select asp-for="@Model.CategoryLayout"
                            class="form-control"
                            asp-items="@Model.ListCategoryLayout">
                        <option disabled selected>--- SELECT ---</option>
                    </select>
                    <span asp-validation-for="@Model.CategoryLayout" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-sm-offset-3 col-md-10 col-sm-9 col-xs-12">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>
</div>
