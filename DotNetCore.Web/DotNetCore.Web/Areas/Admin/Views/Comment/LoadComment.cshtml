@using DotNetCore.Web.Areas.Admin.Models
@model List<DotNetCore.Web.Areas.Admin.Models.CommentViewModel>
@{
    ViewBag.Title = "Comment";
}

<div class="col-xs-12 page-title">
    <div class="title_left">
        <h3>Comment</h3>
    </div>
</div>

<div class="col-xs-12 main-content">
    <table class="table table-striped table-dark table-hover">
        <thead class="thead-inverse">
            <tr>
                <th scope="row" class="width-3">
                    Type Comment
                </th>
                <th scope="row" class="width-3">
                    User Name
                </th>
                <th scope="row" class="width-5">
                    Comment
                </th>
                <th scope="row" class="width-3">
                    Action
                </th>
            </tr>
        </thead>
        @if (Model != null && Model.Count > 0)
        {
            <tbody>
                @foreach (var comment in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => comment.TypeComment)
                    </td>
                    <td>
                        @string.Format("{0} {1}", comment.UserViewModel.FirstName, comment.UserViewModel.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => comment.Body)
                    </td>
                    <td>
                        @if (comment.IsActive)
                        {
                            <a data-commentid="@comment.Id" class="btn btn-default btn-reject-comment">
                                <i class="fa fa-ban" aria-hidden="true"></i> Reject
                            </a>
                        }
                        else
                        {
                            <a data-commentid="@comment.Id" class="btn btn-default btn-approve-comment">
                                <i class="fa fa-check" aria-hidden="true"></i> Approve
                            </a>
                        }
                    </td>
                </tr>
                }
            </tbody>
        }
    </table>
</div>
